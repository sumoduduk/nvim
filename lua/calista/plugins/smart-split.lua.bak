return {
  "mrjones2014/smart-splits.nvim",
  build = "./kitty/install-kittens.bash",
  config = function()
    local split = require("smart-splits")
    split.setup({
      ignored_bufftypes = { "neo-tree" },
    })

    local keymap = vim.keymap

    -- recommended mappings
    -- resizing splits
    -- these keymaps will also accept a range,
    -- for example `10<A-h>` will `resize_left` by `(10 * config.default_amount)`
    keymap.set("n", "<C-b>h", split.resize_left)
    keymap.set("n", "<C-b>j", split.resize_down)
    keymap.set("n", "<C-b>k", split.resize_up)
    keymap.set("n", "<C-b>l", split.resize_right)
    -- moving between splits
    keymap.set("n", "<C-h>", split.move_cursor_left)
    keymap.set("n", "<C-j>", split.move_cursor_down)
    keymap.set("n", "<C-k>", split.move_cursor_up)
    keymap.set("n", "<C-l>", split.move_cursor_right)
    -- swapping buffers between windows
    keymap.set("n", "<C-m>h", split.swap_buf_left)
    keymap.set("n", "<C-m>j", split.swap_buf_down)
    keymap.set("n", "<C-m>k", split.swap_buf_up)
    keymap.set("n", "<C-m>l", split.swap_buf_right)
  end,
}
